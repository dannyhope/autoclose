{
  "name": "autoclose-v2",
  "displayName": "Auto-close tabs",
  "version": "2.0.0",
  "description": "Manage a list of URLs that are safe to close and automatically close matching tabs",
  "author": "Danny Hope",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.0",
    "@plasmohq/storage": "^1.14.0",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "plasmo": "^0.90.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs"
    ],
    "optional_permissions": [
      "bookmarks"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }
}
